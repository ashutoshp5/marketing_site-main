# Server Configuration
PORT=5000

# Comma-separated list of allowed CORS origins (no trailing slashes)
# Example: https://kifaytihealth.com,https://www.kifaytihealth.com
CORS_ORIGINS=

# Database
MONGO_URI=

# Admin Authentication (used only by /api/admin/login)
ADMIN_USERNAME=
ADMIN_PASSWORD=

# JWT (must be a long random string)
JWT_SECRET=
JWT_EXPIRES_IN=12h

# Email Configuration (Nodemailer / SMTP)
CONTACT_EMAIL=
EMAIL_USERNAME=
EMAIL_PASSWORD=

# Cloudinary (optional, for image uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
